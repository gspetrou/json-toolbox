{
  "name": "json-toolbox",
  "version": "1.0.0",
  "displayName": "JSON Toolbox",
  "description": "JSON tools to minify, prettify, quote escape, quote unescape, and possibly more!",
  "license": "UNLICENSED",
  "author": "George Petrou <george@gpetrou.com> (http://gpetrou.com/)",
  "homepage": "https://github.com/gspetrou/json-toolbox#readme",
  "repository": {
    "type": "git",
    "url": "git+hhttps://github.com/gspetrou/json-toolbox.git"
  },
  "bugs": {
    "url": "https://github.com/gspetrou/json-toolbox/issues"
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "pnpm": "^10.11.0",
    "vscode": "^1.102.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "json-toolbox.escapeSelection",
        "title": "JSON Toolbox: Escape selection"
      },
      {
        "command": "json-toolbox.minifySelection",
        "title": "JSON Toolbox: Minify selection"
      },
      {
        "command": "json-toolbox.prettifySelection",
        "title": "JSON Toolbox: Prettify selection"
      },
      {
        "command": "json-toolbox.unescapeSelection",
        "title": "JSON Toolbox: Unescape selection"
      }
    ]
  },
  "activationEvents": [],
  "type": "module",
  "main": "./dist/extension.cjs",
  "exports": {
    ".": "./dist/extensions.cjs"
  },
  "scripts": {
    "build": "tsx esbuild.mts",
    "clean": "rm -rf dist/ node_modules/",
    "fix": "eslint . --fix",
    "lint": "eslint .",
    "release": "pnpm typecheck && pnpm lint && pnpm build && pnpm test",
    "test:integ": "vscode-test",
    "test:unit": "vitest run",
    "test": "pnpm test:unit && pnpm test:integ",
    "typecheck": "tsc",
    "vscode:prepublish": "pnpm release"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.17.2",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/eslint-plugin": "^1.5.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "mocha": "^11.7.5",
    "prettier": "^3.7.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^3.2.4"
  }
}
